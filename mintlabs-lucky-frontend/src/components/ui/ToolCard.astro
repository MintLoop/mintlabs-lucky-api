---
// ToolCard.astro - Lucky v2 Design System
// Card for displaying tools/generators with icon, title, description

import SoftCard from './SoftCard.astro';

export interface Props {
  title: string;
  description: string;
  icon?: string;
  href: string;
  category?: string;
  hasAnimation?: boolean;
  className?: string;
}

const {
  title,
  description,
  icon = 'ðŸŽ²',
  href,
  category,
  hasAnimation = false,
  className = '',
} = Astro.props;
---

<a href={href} class={`tool-card-link block ${className}`}>
  <SoftCard variant="default" padding="lg" radius="2xl" gradient="subtle" hasAnimation={hasAnimation}>
    <div class="flex items-start gap-4">
      <div class="tool-icon text-4xl sm:text-5xl flex-shrink-0" aria-hidden="true">
        {icon}
      </div>
      <div class="flex-1 min-w-0">
        <div class="flex items-start justify-between gap-2 mb-2">
          <h3 class="text-lg sm:text-xl font-bold text-gray-900 leading-tight">
            {title}
          </h3>
          {category && (
            <span class="tool-category text-xs font-medium px-2 py-1 rounded-full bg-gray-100 text-gray-600 flex-shrink-0">
              {category}
            </span>
          )}
        </div>
        <p class="text-sm sm:text-base text-gray-600 leading-relaxed">
          {description}
        </p>
      </div>
    </div>
  </SoftCard>
</a>

<style>
  .tool-card-link {
    text-decoration: none;
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .tool-card-link:hover {
    transform: translateY(-2px);
  }

  .tool-card-link:focus-visible {
    outline: 2px solid var(--accent-primary);
    outline-offset: 4px;
    border-radius: var(--radius-2xl);
  }

  .tool-icon {
    transition: transform var(--duration-normal) var(--ease-bounce);
  }

  .tool-card-link:hover .tool-icon {
    transform: scale(1.1) rotate(5deg);
  }

  @media (prefers-reduced-motion: reduce) {
    .tool-card-link,
    .tool-card-link:hover,
    .tool-icon,
    .tool-card-link:hover .tool-icon {
      transform: none;
      transition: none;
    }
  }
</style>
