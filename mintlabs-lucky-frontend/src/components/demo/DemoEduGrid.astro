<style>
  .demo-edu-grid { width: 100%; }
  .demo-edu-grid-cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-md);
  }
  @media (min-width: 720px) {
    .demo-edu-grid-cards { grid-template-columns: repeat(2, minmax(0, 1fr)); }
  }
  .demo-edu-grid .demo-card { text-align: left; height: 100%; padding: var(--space-md); }
  .demo-edu-grid h4 { color: var(--text-strong); }
  .demo-edu-desc { color: var(--text-body); margin-bottom: var(--space-sm); line-height: 1.45; }
  .demo-edu-list { list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 0.25rem; }
  .demo-edu-list a { font-weight: 600; }
  .demo-edu-grid .demo-card { transition: transform var(--duration-normal), box-shadow var(--duration-normal); }
  .demo-edu-grid .demo-card:focus-within, .demo-edu-grid .demo-card:focus, .demo-edu-grid .demo-card:hover { transform: translateY(-4px) scale(1.01); box-shadow: var(--shadow-glow); }
  .demo-edu-grid .demo-card:focus-within { outline: 2px solid var(--accent-primary); outline-offset: 3px; }
</style>

<script is:inline>
  (function(){
    function filterEduGrid(query){
      const cards = document.querySelectorAll('.demo-edu-grid .demo-card');
      cards.forEach((c)=>{
        const q = (c.getAttribute('data-demo-query')||'').toLowerCase();
        if(!query) { c.style.display=''; return; }
        c.style.display = q.indexOf(query) >= 0 ? '' : 'none';
      });
    }

    window.addEventListener('searchChange', function(e){
      const q = (e.detail && e.detail.query) ? e.detail.query.toLowerCase() : '';
      filterEduGrid(q);
    });
  })();
</script>
