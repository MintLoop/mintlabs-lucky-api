---
/**
 * EduCard â€” Educational Resource Card Component
 * 
 * Reusable card for linking to educational content from microtools.
 * Follows Phase 4 token compliance rules.
 * 
 * @param title - Card title (semibold)
 * @param description - Brief 1-2 sentence explanation
 * @param link - Internal (/docs/...) or external URL
 * @param icon - Optional emoji or SVG icon
 */

export interface Props {
  title: string;
  description: string;
  link: string;
  icon?: string;
}

const { title, description, link, icon = "ðŸ“š" } = Astro.props;

// Determine if link is external
const isExternal = link.startsWith('http://') || link.startsWith('https://');
const linkTarget = isExternal ? '_blank' : '_self';
const linkRel = isExternal ? 'noopener noreferrer' : undefined;
---

<a 
  href={link}
  target={linkTarget}
  rel={linkRel}
  class="edu-card"
  aria-label={`Learn more: ${title}`}
>
  <div class="edu-card-icon" aria-hidden="true">
    {icon}
  </div>
  <div class="edu-card-content">
    <h4 class="edu-card-title">{title}</h4>
    <p class="edu-card-description">{description}</p>
    <span class="edu-card-cta">
      Learn More {isExternal && 'â†—'}
    </span>
  </div>
</a>

<style>
  .edu-card {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: var(--surface-elevated);
    border: 1px solid var(--border-primary-darker);
    border-radius: 0.5rem;
    box-shadow: var(--card-shadow);
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .edu-card:hover {
    background: var(--surface-hover);
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.12);
  }

  .edu-card:focus-visible {
    outline: 3px solid var(--accent);
    outline-offset: 2px;
  }

  .edu-card-icon {
    font-size: 2rem;
    line-height: 1;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .edu-card-content {
    flex: 1;
    min-width: 0;
  }

  .edu-card-title {
    margin: 0 0 0.25rem 0;
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.4;
  }

  .edu-card-description {
    margin: 0 0 0.5rem 0;
    font-size: 0.875rem;
    line-height: 1.5;
    opacity: 0.85;
  }

  .edu-card-cta {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent);
  }

  .edu-card:hover .edu-card-cta {
    text-decoration: underline;
  }

  /* Mobile responsive */
  @media (max-width: 640px) {
    .edu-card {
      padding: 0.875rem 1rem;
      gap: 0.75rem;
    }

    .edu-card-icon {
      font-size: 1.5rem;
    }

    .edu-card-title {
      font-size: 0.9375rem;
    }

    .edu-card-description {
      font-size: 0.8125rem;
    }
  }
</style>
