---
import TrackLink from "./TrackLink.astro";

const {
  id,
  title,
  desc,
  cta,
  href,
  disclaimer = "",
} = Astro.props;
---
<article class="rounded-xl border border-slate-700 bg-slate-800/50 p-4 hover:border-emerald-600/50 transition-colors">
  <h4 class="text-sm font-semibold text-emerald-300">{title}</h4>
  <p class="mt-2 text-sm text-gray-400 leading-relaxed">{desc}</p>
  <TrackLink
    href={href}
    rel="nofollow sponsored noopener"
    event="affiliate_click"
    props={{ id, title }}
    class="inline-flex items-center gap-1 rounded-lg px-3 py-1.5 bg-emerald-600 text-white text-sm hover:bg-emerald-500 transition mt-3"
  >
    {cta}
    <span class="text-xs">â†’</span>
  </TrackLink>
  {disclaimer && <p class="mt-2 text-xs text-gray-500">{disclaimer}</p>}
</article>
