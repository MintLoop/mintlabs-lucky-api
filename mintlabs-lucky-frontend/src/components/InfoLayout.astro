---
import Layout from "../layouts/Layout.astro";

export interface Props {
  title: string;
  subtitle?: string;
  pageTitle?: string;
  description?: string;
  keywords?: string;
  jsonLd?: object;
}

const { 
  title, 
  subtitle = "",
  pageTitle,
  description,
  keywords,
  jsonLd
} = Astro.props as Props;

const seoTitle = pageTitle || `${title} - MintLabs Lucky Numbers`;
---

<Layout 
  title={seoTitle}
  description={description}
  keywords={keywords}
  jsonLd={jsonLd}
>
  <main class="mx-auto max-w-5xl p-6 space-y-12">
    <header class="mb-12 text-center">
      <h1 class="mb-6 text-5xl font-bold bg-gradient-to-r from-emerald-300 via-blue-300 to-purple-400 bg-clip-text text-transparent">
        {title}
      </h1>
      {subtitle ? (
        <p class="mx-auto mb-8 max-w-3xl text-xl leading-relaxed text-gray-300">{subtitle}</p>
      ) : null}

      <div class="mb-8 rounded-2xl border border-slate-700 bg-slate-800 p-6 backdrop-blur-sm">
        <p class="text-sm leading-relaxed text-gray-300">
          <slot name="teaser" />
        </p>
      </div>

      <a
        href="/"
        class="inline-flex items-center gap-3 rounded-xl bg-gradient-to-r from-emerald-500 to-blue-500 px-8 py-4 font-semibold text-white shadow-lg transition-all duration-300 hover:-translate-y-0.5 hover:from-emerald-400 hover:to-blue-400 hover:shadow-xl"
      >
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        Generate Numbers
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
      </a>
    </header>

    <slot />

    <div class="pt-12 text-center">
      <slot name="back-cta">
        <a
          href="/"
          class="inline-flex items-center gap-3 rounded-xl bg-gradient-to-r from-emerald-500 to-blue-500 px-8 py-4 font-semibold text-white shadow-lg transition-all duration-300 hover:-translate-y-0.5 hover:from-emerald-400 hover:to-blue-400 hover:shadow-xl"
        >
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Generate Numbers
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
        </a>
      </slot>
    </div>

    <footer class="mt-12 pb-8 border-t border-slate-800 pt-8">
      {/* Footer Navigation */}
      <div class="grid gap-8 md:grid-cols-3 mb-8 text-sm">
        <div>
          <h4 class="font-semibold text-gray-300 mb-3">Education</h4>
          <ul class="space-y-2 text-slate-400">
            <li><a href="/lottery-odds" class="hover:text-emerald-400 transition-colors">Lottery Odds</a></li>
            <li><a href="/lottery-math" class="hover:text-emerald-400 transition-colors">The Math</a></li>
            <li><a href="/faq" class="hover:text-emerald-400 transition-colors">FAQ</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold text-gray-300 mb-3">Tools</h4>
          <ul class="space-y-2 text-slate-400">
            <li><a href="/" class="hover:text-emerald-400 transition-colors">Number Generator</a></li>
            <li><a href="/tools/payout-calculator" class="hover:text-emerald-400 transition-colors">Payout Calculator</a></li>
            <li><a href="/tools/lottery-budget" class="hover:text-emerald-400 transition-colors">Budget Planner</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold text-gray-300 mb-3">Legal</h4>
          <ul class="space-y-2 text-slate-400">
            <li><a href="/terms" class="hover:text-emerald-400 transition-colors">Terms & Conditions</a></li>
            <li><a href="/privacy" class="hover:text-emerald-400 transition-colors">Privacy Policy</a></li>
            <li><a href="/archive" class="hover:text-emerald-400 transition-colors">Past Results</a></li>
          </ul>
        </div>
      </div>
      
      {/* Copyright and branding */}
      <div class="text-center text-sm text-slate-400 border-t border-slate-800 pt-6">
        <p>
          Â© 2025 MintLabs. All rights reserved.
        </p>
        <div class="mt-3 flex items-center justify-center gap-2 text-xs text-slate-500">
          <img src="/mintlab.png" alt="MintLabs" class="h-4 w-4 opacity-70" />
          <span>Powered by MintLabs</span>
        </div>
        <p class="mt-3 text-xs text-slate-500 max-w-md mx-auto">
          For entertainment and education only. We don't predict lottery numbers. 
          Please play responsibly.
        </p>
      </div>
    </footer>
  </main>
</Layout>
