---
import InfoLayout from "../../components/InfoLayout.astro";
import BackToGenerator from "../../components/BackToGenerator.astro";

const title = "Top 10 Least Drawn Lottery Numbers | Cold Number Statistics";
const description =
  "See the least frequently drawn Powerball and Mega Millions numbers. Explore which numbers appear least often in lottery history with detailed statistics and charts.";
const keywords =
  "least drawn powerball numbers, cold lottery numbers, rare lottery numbers, powerball cold numbers, mega millions least drawn, lottery number frequency";
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  name: "Top 10 Least Drawn Lottery Numbers",
  description,
  url: "https://lucky.mintloop.dev/tools/least-drawn-numbers",
  applicationCategory: "EducationalApplication",
  operatingSystem: "Any",
  offers: {
    "@type": "Offer",
    price: "0",
    priceCurrency: "USD",
  },
};
---

<InfoLayout {title} {description} {keywords} {jsonLd}>
  <BackToGenerator />

  <div class="max-w-6xl mx-auto space-y-6">
    {/* Header */}
    <div class="text-center space-y-2">
      <h1 class="text-3xl md:text-4xl font-bold">
        ‚ùÑÔ∏è Top 10 Least Drawn Numbers
      </h1>
      <p class="text-lg theme-text-secondary max-w-2xl mx-auto">
        The least frequently appearing lottery numbers based on historical draw data
      </p>
    </div>

    {/* Game Selector */}
    <div class="theme-bg-card p-6 rounded-xl">
      <div class="flex flex-col sm:flex-row gap-4 items-center">
        <label for="game-select" class="font-medium whitespace-nowrap">
          Select Game:
        </label>
        <select
          id="game-select"
          class="flex-1 px-4 py-2 rounded-lg border theme-border-primary theme-bg-input theme-text-primary"
        >
          <option value="powerball">Powerball</option>
          <option value="megamillions">Mega Millions</option>
        </select>
      </div>
    </div>

    {/* Bottom 10 Display */}
    <div class="theme-bg-card p-6 rounded-xl space-y-6">
      <div class="flex justify-between items-center">
        <h2 class="text-xl font-semibold">Top 10 Least Frequent Numbers</h2>
        <div class="text-sm theme-text-muted">
          Based on <span id="sample-size">1,000</span> draws
        </div>
      </div>

      {/* Anti-Podium View */}
      <div class="grid md:grid-cols-3 gap-4">
        {/* 2nd Coldest */}
        <div class="order-2 md:order-1 theme-bg-surface p-6 rounded-xl border-2 border-cyan-600 text-center space-y-3">
          <div class="text-4xl">‚ùÑÔ∏è</div>
          <div class="text-lg theme-text-secondary">#2 Coldest</div>
          <div id="rank-2" class="text-5xl font-bold text-cyan-300">--</div>
          <div class="text-sm theme-text-muted">
            <span id="freq-2">--</span> appearances
          </div>
          <div class="text-xs theme-text-muted">
            <span id="pct-2">--</span>% frequency
          </div>
        </div>

        {/* Coldest Number */}
        <div class="order-1 md:order-2 theme-bg-surface p-8 rounded-xl border-2 border-sky-400 text-center space-y-3 transform md:scale-110">
          <div class="text-5xl">ü•∂</div>
          <div class="text-xl text-sky-400 font-semibold">#1 Coldest Number</div>
          <div id="rank-1" class="text-6xl font-bold text-sky-400">--</div>
          <div class="text-sm theme-text-muted">
            <span id="freq-1">--</span> appearances
          </div>
          <div class="text-xs theme-text-muted">
            <span id="pct-1">--</span>% frequency
          </div>
        </div>

        {/* 3rd Coldest */}
        <div class="order-3 theme-bg-surface p-6 rounded-xl border-2 border-slate-600 text-center space-y-3">
          <div class="text-4xl">‚ùÑÔ∏è</div>
          <div class="text-lg theme-text-secondary">#3 Coldest</div>
          <div id="rank-3" class="text-5xl font-bold text-slate-400">--</div>
          <div class="text-sm theme-text-muted">
            <span id="freq-3">--</span> appearances
          </div>
          <div class="text-xs theme-text-muted">
            <span id="pct-3">--</span>% frequency
          </div>
        </div>
      </div>

      {/* Remaining 7 Numbers */}
      <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-4">
        {[4, 5, 6, 7, 8, 9, 10].map((rank) => (
          <div class="theme-bg-surface p-4 rounded-lg border theme-border-primary text-center space-y-2">
            <div class="text-sm theme-text-secondary">#{rank}</div>
            <div id={`rank-${rank}`} class="text-3xl font-bold text-sky-400">--</div>
            <div class="text-xs theme-text-muted">
              <span id={`freq-${rank}`}>--</span> times (<span id={`pct-${rank}`}>--</span>%)
            </div>
          </div>
        ))}
      </div>
    </div>

    {/* Frequency Bar Chart */}
    <div class="theme-bg-card p-6 rounded-xl space-y-4">
      <h2 class="text-xl font-semibold">Visual Frequency Comparison</h2>
      <div id="bar-chart" class="space-y-2">
        {/* Will be populated by JavaScript */}
      </div>
    </div>

    {/* Important Warning */}
    <div class="p-6 bg-sky-500/10 border-2 border-sky-500/30 rounded-xl">
      <div class="flex gap-4">
        <div class="text-3xl">‚ö†Ô∏è</div>
        <div class="flex-1 space-y-3">
          <div class="font-semibold text-sky-400 text-xl">These Numbers Are NOT "Due"</div>
          <p class="theme-text-secondary">
            Even though these numbers have appeared least frequently in the past, <strong>they are NOT more likely
            to appear in future draws</strong>. Every number has exactly the same probability each draw.
          </p>
          <p class="theme-text-secondary">
            The belief that "cold" numbers are "due" to appear is a classic example of the
            <strong>gambler's fallacy</strong>. Past performance does not influence future results.
          </p>
        </div>
      </div>
    </div>

    {/* Why This Happens */}
    <div class="theme-bg-card p-6 rounded-xl space-y-4">
      <h2 class="text-xl font-semibold">üìä Why Do Some Numbers Appear Less Often?</h2>
      <div class="space-y-3 theme-text-secondary">
        <p>
          In truly random processes, <strong>temporary imbalances</strong> are completely normal:
        </p>
        <ul class="list-disc list-inside space-y-2 ml-4">
          <li>Random data naturally has both hot streaks and cold streaks</li>
          <li>Over infinite draws, all numbers converge to the same frequency</li>
          <li>Current "cold" numbers may become "hot" tomorrow (and vice versa)</li>
          <li>Gaps between expected and actual frequency shrink over time</li>
        </ul>
        
        <div class="p-4 theme-bg-surface rounded-lg border theme-border-primary mt-4">
          <div class="font-semibold mb-2">üìà Statistical Reality</div>
          <p class="text-sm">
            For Powerball (5 balls from 69), each number should appear in about <strong>7.2%</strong> of draws.
            Seeing 60 appearances instead of 72 (in 1,000 draws) is perfectly normal random variation‚Äînot a sign
            the number is "due."
          </p>
        </div>
      </div>
    </div>

    {/* The "Due Number" Fallacy */}
    <div class="theme-bg-card p-6 rounded-xl space-y-4">
      <h2 class="text-xl font-semibold">üö´ The "Due Number" Fallacy</h2>
      <div class="space-y-3 theme-text-secondary">
        <p>
          Many people believe cold numbers are "due" to appear because "things even out." This is incorrect:
        </p>
        
        <div class="grid md:grid-cols-2 gap-4 mt-4">
          <div class="p-4 bg-rose-500/10 border border-rose-500/30 rounded-lg">
            <div class="font-semibold text-rose-400 mb-2">‚ùå Myth</div>
            <p class="text-sm">
              "Number 34 has only appeared 60 times while others have appeared 80 times. It needs to catch up, so it's due!"
            </p>
          </div>
          <div class="p-4 bg-emerald-500/10 border border-emerald-500/30 rounded-lg">
            <div class="font-semibold text-emerald-400 mb-2">‚úì Reality</div>
            <p class="text-sm">
              Number 34 still has exactly 7.2% probability on the next draw. The lottery balls don't know or care about past results.
            </p>
          </div>
        </div>
        
        <p class="mt-4">
          <strong>Important:</strong> "Evening out" happens through <em>future random variation</em>, not because
          past low-frequency numbers become more likely. The gaps don't close‚Äîthey just become less significant
          as percentages as more draws occur.
        </p>
      </div>
    </div>

    {/* Strategy Note */}
    <div class="theme-bg-card p-6 rounded-xl space-y-4">
      <h2 class="text-xl font-semibold">üéØ Should You Play These Numbers?</h2>
      <div class="space-y-3 theme-text-secondary">
        <div class="grid md:grid-cols-2 gap-4">
          <div class="p-4 bg-rose-500/10 border border-rose-500/30 rounded-lg">
            <div class="font-semibold text-rose-400 mb-2">‚ùå Not Recommended</div>
            <p class="text-sm">
              Playing these numbers because they're "due" is the <strong>gambler's fallacy</strong>.
              They have no mathematical advantage.
            </p>
          </div>
          <div class="p-4 bg-emerald-500/10 border border-emerald-500/30 rounded-lg">
            <div class="font-semibold text-emerald-400 mb-2">‚úì Equally Valid</div>
            <p class="text-sm">
              These numbers are just as likely as any others. If you like them for any reason, they're fine to play!
            </p>
          </div>
        </div>
        
        <p class="mt-4">
          <strong>Remember:</strong> All lottery numbers have identical odds. Choose numbers you enjoy,
          avoid popular patterns (to reduce split risk), and never expect past frequency to influence future draws.
        </p>
      </div>
    </div>

    {/* Comparison */}
    <div class="theme-bg-card p-6 rounded-xl space-y-4">
      <h2 class="text-xl font-semibold">üîÑ Hot vs Cold: The Complete Picture</h2>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b theme-border-primary">
              <th class="text-left py-2 px-3">Category</th>
              <th class="text-center py-2 px-3">Typical Frequency</th>
              <th class="text-center py-2 px-3">Future Probability</th>
              <th class="text-left py-2 px-3">Why It Happens</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b theme-border-primary">
              <td class="py-2 px-3 font-semibold text-amber-400">Hot Numbers</td>
              <td class="text-center py-2 px-3">75-85 / 1,000 draws</td>
              <td class="text-center py-2 px-3 text-emerald-400">7.2% (same as all)</td>
              <td class="py-2 px-3 text-xs">Random clustering</td>
            </tr>
            <tr class="border-b theme-border-primary">
              <td class="py-2 px-3 font-semibold text-sky-400">Cold Numbers</td>
              <td class="text-center py-2 px-3">60-70 / 1,000 draws</td>
              <td class="text-center py-2 px-3 text-emerald-400">7.2% (same as all)</td>
              <td class="py-2 px-3 text-xs">Random clustering</td>
            </tr>
            <tr>
              <td class="py-2 px-3 font-semibold">Average Numbers</td>
              <td class="text-center py-2 px-3">70-75 / 1,000 draws</td>
              <td class="text-center py-2 px-3 text-emerald-400">7.2% (same as all)</td>
              <td class="py-2 px-3 text-xs">Closer to expected value</td>
            </tr>
          </tbody>
        </table>
      </div>
      <p class="text-sm theme-text-secondary mt-3">
        All numbers converge to 7.2% over millions of draws, regardless of current frequency.
      </p>
    </div>

    {/* Related Tools */}
    <div class="theme-bg-card p-6 rounded-xl space-y-4">
      <h2 class="text-xl font-semibold">üîó Related Tools</h2>
      <div class="grid md:grid-cols-3 gap-4">
        <a
          href="/tools/most-drawn-numbers"
          class="p-4 border theme-border-primary rounded-lg hover:bg-slate-800/50 transition-colors"
        >
          <div class="font-semibold text-amber-400 mb-1">üî• Top 10 Most Drawn</div>
          <div class="text-sm theme-text-secondary">See the hottest numbers</div>
        </a>
        <a
          href="/tools/hot-cold-numbers"
          class="p-4 border theme-border-primary rounded-lg hover:bg-slate-800/50 transition-colors"
        >
          <div class="font-semibold text-amber-400 mb-1">üî• Hot & Cold Numbers</div>
          <div class="text-sm theme-text-secondary">Full frequency analysis</div>
        </a>
        <a
          href="/tools/why-odds-dont-change"
          class="p-4 border theme-border-primary rounded-lg hover:bg-slate-800/50 transition-colors"
        >
          <div class="font-semibold text-emerald-400 mb-1">üé≤ Why Odds Don't Change</div>
          <div class="text-sm theme-text-secondary">Understand independence</div>
        </a>
      </div>
    </div>

    {/* Disclaimer */}
    <div class="p-4 bg-slate-800/30 border border-slate-700 rounded-lg text-sm theme-text-muted">
      <strong>Educational Tool:</strong> This tool uses simulated historical data to demonstrate
      frequency patterns typical in lottery draws. Actual lottery frequency data shows similar
      random variation. Low frequency does not mean numbers are "due" to appear.
    </div>
  </div>

  <script>
    interface NumberFrequency {
      number: number;
      count: number;
      frequency: number;
    }

    let currentGame = 'powerball';
    const TOTAL_DRAWS = 1000;

    function init() {
      const gameSelect = document.getElementById('game-select') as HTMLSelectElement;
      gameSelect?.addEventListener('change', handleGameChange);
      
      generateAndDisplay();
    }

    function handleGameChange() {
      const gameSelect = document.getElementById('game-select') as HTMLSelectElement;
      currentGame = gameSelect?.value || 'powerball';
      generateAndDisplay();
    }

    function generateAndDisplay() {
      // Update sample size display
      const sampleSizeEl = document.getElementById('sample-size');
      if (sampleSizeEl) {
        sampleSizeEl.textContent = TOTAL_DRAWS.toLocaleString();
      }

      const maxNumbers = currentGame === 'powerball' ? 69 : 70;
      const frequencies = generateFrequencyData(maxNumbers);
      
      // Sort by frequency ascending (coldest first)
      frequencies.sort((a, b) => a.count - b.count);
      
      // Get bottom 10
      const bottom10 = frequencies.slice(0, 10);
      
      // Display bottom 10
      displayBottom10(bottom10);
      
      // Display bar chart
      displayBarChart(bottom10);
    }

    function generateFrequencyData(maxNumbers: number): NumberFrequency[] {
      const frequencies: NumberFrequency[] = [];
      
      // Simulate frequency data with realistic variation
      for (let num = 1; num <= maxNumbers; num++) {
        // Expected frequency is 5/maxNumbers per draw
        const expectedCount = (5 / maxNumbers) * TOTAL_DRAWS;
        
        // Add random variation (¬±15% of expected)
        const variation = (Math.random() - 0.5) * 0.3;
        const count = Math.round(expectedCount * (1 + variation));
        const frequency = (count / TOTAL_DRAWS) * 100;
        
        frequencies.push({ number: num, count, frequency });
      }
      
      return frequencies;
    }

    function displayBottom10(bottom10: NumberFrequency[]) {
      bottom10.forEach((item, index) => {
        const rank = index + 1;
        const numberEl = document.getElementById(`rank-${rank}`);
        const freqEl = document.getElementById(`freq-${rank}`);
        const pctEl = document.getElementById(`pct-${rank}`);
        
        if (numberEl) numberEl.textContent = item.number.toString();
        if (freqEl) freqEl.textContent = item.count.toString();
        if (pctEl) pctEl.textContent = item.frequency.toFixed(2);
      });
    }

    function displayBarChart(bottom10: NumberFrequency[]) {
      const chartContainer = document.getElementById('bar-chart');
      if (!chartContainer) return;
      
      chartContainer.innerHTML = '';
      
      // Use the maximum of bottom10 for scaling (not global max)
      const maxCount = bottom10[bottom10.length - 1].count;
      
      bottom10.forEach((item, index) => {
        const barWrapper = document.createElement('div');
        barWrapper.className = 'flex items-center gap-3';
        
        const rank = document.createElement('div');
        rank.className = 'w-12 text-right theme-text-secondary font-semibold';
        rank.textContent = `#${index + 1}`;
        
        const number = document.createElement('div');
        number.className = 'w-16 text-center font-bold text-lg';
        number.textContent = item.number.toString();
        
        const barContainer = document.createElement('div');
        barContainer.className = 'flex-1 theme-bg-surface rounded-full h-8 relative overflow-hidden';
        
        const bar = document.createElement('div');
        bar.className = 'h-full rounded-full transition-all duration-1000';
        const width = (item.count / maxCount) * 100;
        bar.style.width = `${width}%`;
        
        // Color gradient for top 3 coldest
        if (index === 0) {
          bar.style.background = 'linear-gradient(90deg, #0ea5e9, #38bdf8)';
        } else if (index === 1) {
          bar.style.background = 'linear-gradient(90deg, #0891b2, #06b6d4)';
        } else if (index === 2) {
          bar.style.background = 'linear-gradient(90deg, #475569, #64748b)';
        } else {
          bar.style.background = 'linear-gradient(90deg, #6366f1, #818cf8)';
        }
        
        const label = document.createElement('div');
        label.className = 'absolute right-3 top-1/2 -translate-y-1/2 text-sm font-semibold text-white drop-shadow';
        label.textContent = `${item.count} (${item.frequency.toFixed(1)}%)`;
        
        bar.appendChild(label);
        barContainer.appendChild(bar);
        
        barWrapper.appendChild(rank);
        barWrapper.appendChild(number);
        barWrapper.appendChild(barContainer);
        
        chartContainer.appendChild(barWrapper);
      });
    }

    // Initialize on page load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  </script>
</InfoLayout>
