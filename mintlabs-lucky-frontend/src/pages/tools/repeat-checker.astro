<script>
  document.addEventListener('DOMContentLoaded', () => {
    const powerballBtn = document.querySelector('[data-game="powerball"]') as HTMLButtonElement;
    const megamillionsBtn = document.querySelector('[data-game="megamillions"]') as HTMLButtonElement;
    const numberInputs = document.getElementById('numberInputs') as HTMLDivElement;
    const checkBtn = document.getElementById('checkBtn') as HTMLButtonElement;
    const randomBtn = document.getElementById('randomBtn') as HTMLButtonElement;
    const resultsContainer = document.getElementById('results') as HTMLDivElement;

    let currentGame: 'powerball' | 'megamillions' = 'powerball';

    // Simulated historical data (in real app, this would come from API)
    const historicalData = {
      powerball: {
        totalDraws: 520,
        startDate: '2020-01-01',
        // Frequency data for numbers 1-69 and bonus 1-26
        frequency: generateFrequencyData(69, 520, 5/69),
        bonusFrequency: generateFrequencyData(26, 520, 1/26),
        recentDraws: generateRecentDraws(10, 69, 26, 5)
      },
      megamillions: {
        totalDraws: 520,
        startDate: '2020-01-01',
        frequency: generateFrequencyData(70, 520, 5/70),
        bonusFrequency: generateFrequencyData(25, 520, 1/25),
        recentDraws: generateRecentDraws(10, 70, 25, 5)
      }
    };

    function generateFrequencyData(max: number, totalDraws: number, expectedRate: number): Record<number, { count: number, lastSeen: number, streak: number }> {
      const data: Record<number, { count: number, lastSeen: number, streak: number }> = {};
      for (let i = 1; i <= max; i++) {
        // Add realistic variance around expected value
        const expectedCount = Math.round(totalDraws * expectedRate);
        const variance = Math.floor(Math.random() * 20) - 10;
        data[i] = {
          count: Math.max(0, expectedCount + variance),
          lastSeen: Math.floor(Math.random() * 30), // draws since last seen
          streak: Math.random() > 0.9 ? Math.floor(Math.random() * 3) + 2 : 0 // occasional consecutive appearances
        };
      }
      return data;
    }

    function generateRecentDraws(count: number, maxMain: number, maxBonus: number, mainCount: number): { main: number[], bonus: number, date: string }[] {
      const draws = [];
      const now = new Date();
      for (let i = 0; i < count; i++) {
        const main: number[] = [];
        while (main.length < mainCount) {
          const num = Math.floor(Math.random() * maxMain) + 1;
          if (!main.includes(num)) main.push(num);
        }
        main.sort((a, b) => a - b);
        
        const drawDate = new Date(now);
        drawDate.setDate(drawDate.getDate() - (i * 3 + Math.floor(Math.random() * 2)));
        
        draws.push({
          main,
          bonus: Math.floor(Math.random() * maxBonus) + 1,
          date: drawDate.toISOString().split('T')[0]
        });
      }
      return draws;
    }

    function switchGame(game: 'powerball' | 'megamillions') {
      currentGame = game;
      powerballBtn.classList.toggle('active', game === 'powerball');
      megamillionsBtn.classList.toggle('active', game === 'megamillions');
      
      // Update input limits
      const mainInputs = numberInputs.querySelectorAll('.main') as NodeListOf<HTMLInputElement>;
      const bonusInput = numberInputs.querySelector('.bonus') as HTMLInputElement;
      
      if (game === 'powerball') {
        mainInputs.forEach(input => input.max = '69');
        bonusInput.max = '26';
        bonusInput.placeholder = 'PB';
      } else {
        mainInputs.forEach(input => input.max = '70');
        bonusInput.max = '25';
        bonusInput.placeholder = 'MB';
      }
      
      resultsContainer.innerHTML = '';
    }

    function formatLastSeenDraws(lastSeen: number): string {
      if (!lastSeen || lastSeen === 0) return 'Never';
      if (lastSeen === 1) return '1 draw ago';
      return `${lastSeen} draws ago`;
    }

    function getStatusFromDeviation(deviation: number) {
      if (deviation > 5) return { statusClass: 'hot', statusEmoji: 'üî•', statusLabel: 'Hot' };
      if (deviation < -5) return { statusClass: 'cold', statusEmoji: '‚ùÑÔ∏è', statusLabel: 'Cold' };
      return { statusClass: 'normal', statusEmoji: '‚ö™', statusLabel: 'Normal' };
    }

    function checkNumbers() {
      const mainInputs = numberInputs.querySelectorAll('.main') as NodeListOf<HTMLInputElement>;
      const bonusInput = numberInputs.querySelector('.bonus') as HTMLInputElement;
      
      const mainNumbers: number[] = [];
      mainInputs.forEach(input => {
        const val = parseInt(input.value);
        if (!isNaN(val) && val > 0) mainNumbers.push(val);
      });
      
      const bonusNumber = parseInt(bonusInput.value);
      
      if (mainNumbers.length < 5) {
        resultsContainer.innerHTML = '<p style="text-align: center; color: var(--text-secondary);">Please enter all 5 main numbers</p>';
        return;
      }
      
      const data = historicalData[currentGame];
      const validBonus = !isNaN(bonusNumber) && bonusNumber > 0;
      const expectedMain = Math.round(data.totalDraws * (5 / (currentGame === 'powerball' ? 69 : 70)));
      const expectedBonus = Math.round(data.totalDraws * (1 / (currentGame === 'powerball' ? 26 : 25)));
      let bonusStats: { count: number; lastSeen: number; streak: number } | null = null;
      let bonusStatus: { statusClass: string; statusEmoji: string; statusLabel: string } | null = null;

      const mainDetails = mainNumbers.map((num, index) => {
        const stats = data.frequency[num] || { count: 0, lastSeen: 0, streak: 0 };
        const deviation = stats.count - expectedMain;
        const status = getStatusFromDeviation(deviation);
        return {
          num,
          stats,
          expected: expectedMain,
          statusClass: status.statusClass,
          statusEmoji: status.statusEmoji,
          statusLabel: status.statusLabel,
          delay: index * 80
        };
      });

      const exactMatch = data.recentDraws.find(d => 
        mainNumbers.every(n => d.main.includes(n)) && d.bonus === bonusNumber
      );

      const hotCount = mainDetails.filter(detail => detail.statusClass === 'hot').length;
      const coldCount = mainDetails.filter(detail => detail.statusClass === 'cold').length;
      const recentHits = mainDetails.filter(detail => detail.stats.lastSeen <= 5 && detail.stats.lastSeen !== 0).length;
      const streaking = mainDetails.filter(detail => detail.stats.streak > 0).length;

      let bonusMarkup = '';
      let bonusCard = '';
      if (validBonus) {
        bonusStats = (data as any).bonusFrequency?.[bonusNumber] || data.frequency[bonusNumber] || { count: 0, lastSeen: 0, streak: 0 };
        const bonusDeviation = bonusStats.count - expectedBonus;
        bonusStatus = getStatusFromDeviation(bonusDeviation);

        bonusMarkup = `<span class="result-ball bonus ${bonusStatus.statusClass}">${bonusNumber}</span>`;

        bonusCard = `
          <div class="number-card bonus ${bonusStatus.statusClass}" style="animation-delay: ${mainDetails.length * 80}ms">
            <div class="number-card-header">
              <span class="number-chip bonus ${bonusStatus.statusClass}">${bonusNumber}</span>
              <span class="status-chip ${bonusStatus.statusClass}">${bonusStatus.statusEmoji} ${bonusStatus.statusLabel}</span>
            </div>
            <div class="number-metrics">
              <div class="metric">
                <span class="metric-label">Hits</span>
                <span class="metric-value">${bonusStats.count.toLocaleString()}</span>
              </div>
              <div class="metric">
                <span class="metric-label">Expected</span>
                <span class="metric-value">${expectedBonus.toLocaleString()}</span>
              </div>
              <div class="metric">
                <span class="metric-label">Last seen</span>
                <span class="metric-value">${formatLastSeenDraws(bonusStats.lastSeen)}</span>
              </div>
              <div class="metric">
                <span class="metric-label">Streak</span>
                <span class="metric-value">${bonusStats.streak > 0 ? `${bonusStats.streak}x` : 'None'}</span>
              </div>
            </div>
          </div>
        `;
      }

      const numberCards = mainDetails.map(detail => `
        <div class="number-card ${detail.statusClass}" style="animation-delay: ${detail.delay}ms">
          <div class="number-card-header">
            <span class="number-chip ${detail.statusClass}">${detail.num}</span>
            <span class="status-chip ${detail.statusClass}">${detail.statusEmoji} ${detail.statusLabel}</span>
          </div>
          <div class="number-metrics">
            <div class="metric">
              <span class="metric-label">Hits</span>
              <span class="metric-value">${detail.stats.count.toLocaleString()}</span>
            </div>
            <div class="metric">
              <span class="metric-label">Expected</span>
              <span class="metric-value">${detail.expected.toLocaleString()}</span>
            </div>
            <div class="metric">
              <span class="metric-label">Last seen</span>
              <span class="metric-value">${formatLastSeenDraws(detail.stats.lastSeen)}</span>
            </div>
            <div class="metric">
              <span class="metric-label">Streak</span>
              <span class="metric-value">${detail.stats.streak > 0 ? `${detail.stats.streak}x` : 'None'}</span>
            </div>
          </div>
        </div>
      `).join('');

      resultsContainer.innerHTML = `
        <div class="report-card">
          <div class="report-header">
            <div class="report-title-block">
              <p class="report-kicker">Unified report card</p>
              <h3>Repeat Check Report</h3>
              <p class="report-subtitle">${data.totalDraws.toLocaleString()} draws checked ‚Ä¢ ${currentGame === 'powerball' ? 'Powerball' : 'Mega Millions'}</p>
            </div>
            <div class="report-combination">
              ${mainDetails.map(detail => `<span class="result-ball ${detail.statusClass}">${detail.num}</span>`).join('')}
              ${bonusMarkup}
            </div>
          </div>
          
          <div class="report-content">
            <div class="mini-report">
              <div class="mini-row">
                <span class="mini-label">üéØ Exact match</span>
                <span class="mini-value ${exactMatch ? 'success' : 'muted'}">
                  ${exactMatch ? `‚úÖ Found on ${exactMatch.date}` : `No match in last ${data.recentDraws.length} draws`}
                </span>
              </div>
              <div class="mini-row">
                <span class="mini-label">üî• Hot numbers</span>
                <span class="mini-value hot">üî• ${hotCount}/${mainDetails.length} above trend</span>
              </div>
              <div class="mini-row">
                <span class="mini-label">‚ùÑÔ∏è Cold numbers</span>
                <span class="mini-value cold">‚ùÑÔ∏è ${coldCount}/${mainDetails.length} below trend</span>
              </div>
              <div class="mini-row">
                <span class="mini-label">üïí Recent hits</span>
                <span class="mini-value normal">${recentHits}/${mainDetails.length} seen within last 5 draws ‚Ä¢ ${streaking}/${mainDetails.length} on a streak</span>
              </div>
              ${validBonus ? `
                <div class="mini-row">
                  <span class="mini-label">‚≠ê Bonus ball</span>
                  <span class="mini-value ${bonusStatus?.statusClass || 'normal'}">
                    ${bonusStatus ? `${bonusStatus.statusEmoji} ${bonusStatus.statusLabel}` : '‚ö™ Normal'}
                  </span>
                </div>
              ` : ''}
            </div>

            <div class="numbers-report-grid">
              ${numberCards}
              ${bonusCard}
            </div>
          </div>
          
          <div class="report-footer">
            <p class="disclaimer-text">
              <strong>‚ö†Ô∏è Important:</strong> This historical data has <em>zero</em> predictive value. 
              Each future draw is completely independent and random.
            </p>
          </div>
        </div>
      `;

      // ensure color contrast for dynamically generated chips
      adjustAutoContrast(resultsContainer);
    }

    function generateRandomNumbers() {
      const mainInputs = numberInputs.querySelectorAll('.main') as NodeListOf<HTMLInputElement>;
      const bonusInput = numberInputs.querySelector('.bonus') as HTMLInputElement;
      
      const maxMain = currentGame === 'powerball' ? 69 : 70;
      const maxBonus = currentGame === 'powerball' ? 26 : 25;
      
      // Generate unique main numbers
      const mainNumbers: number[] = [];
      while (mainNumbers.length < 5) {
        const num = Math.floor(Math.random() * maxMain) + 1;
        if (!mainNumbers.includes(num)) {
          mainNumbers.push(num);
        }
      }
      
      // Sort the numbers
      mainNumbers.sort((a, b) => a - b);
      
      // Generate bonus number
      const bonusNumber = Math.floor(Math.random() * maxBonus) + 1;
      
      // Fill the inputs
      mainInputs.forEach((input, index) => {
        input.value = mainNumbers[index]?.toString() || '';
      });
      bonusInput.value = bonusNumber.toString();
      
      // Auto-check the numbers
      setTimeout(() => checkNumbers(), 100);
    }

    powerballBtn.addEventListener('click', () => switchGame('powerball'));
    megamillionsBtn.addEventListener('click', () => switchGame('megamillions'));
    checkBtn.addEventListener('click', checkNumbers);
    randomBtn.addEventListener('click', generateRandomNumbers);

    // ensure any static chips have correct contrast on page load
    adjustAutoContrast(document);
  });

  // Utility: adjust text color on colored elements to keep readable contrast
  function adjustAutoContrast(root: any = document) {
    try {
      const elems = root.querySelectorAll('.number-chip, .status-chip, .result-ball, .trait-badge');
      elems.forEach((el: Element) => {
        const style = getComputedStyle(el);
        const bg = style.backgroundColor || '';
        if (!bg) return;
        // parse rgb(a) or hex
        const rgb = bg.match(/\d+/g);
        if (!rgb || rgb.length < 3) return;
        const r = parseInt(rgb[0], 10), g = parseInt(rgb[1], 10), b = parseInt(rgb[2], 10);
        const luminance = (0.299 * r + 0.587 * g + 0.114 * b) / 255;
        (el as HTMLElement).style.color = luminance > 0.6 ? 'black' : 'white';
      });
    } catch (e) { /* ignore */ }
  }
</script>
