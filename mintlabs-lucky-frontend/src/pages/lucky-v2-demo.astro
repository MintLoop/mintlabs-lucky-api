---
// Lucky v2 Design System Demo Page
import Layout from '../layouts/Layout.astro';
import PageHero from '../components/ui/PageHero.astro';
import SoftCard from '../components/ui/SoftCard.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import ThemePicker from '../components/ui/ThemePicker.astro';
import ToolCard from '../components/ui/ToolCard.astro';
import GameCard from '../components/ui/GameCard.astro';
import InfoBlurb from '../components/ui/InfoBlurb.astro';
import SearchBar from '../components/discovery/SearchBar.astro';
import FilterChips from '../components/discovery/FilterChips.astro';

const demoFilters = [
  { id: 'seasonal', label: 'Seasonal', icon: 'üçÇ' },
  { id: 'kawaii', label: 'Kawaii', icon: 'üå∏' },
  { id: 'premium', label: 'Premium', icon: '‚≠ê' },
];
---

<Layout demo
  title="Lucky v2 Design System Demo | MintLabs"
  description="Preview of the new Lucky v2 Design System with 11 themes, soft cards, and modern UI components."
>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    
    <!-- Hero Section -->
    <PageHero
      title="Lucky v2 Design System"
      subtitle="Explore 11 beautiful themes with seasonal, kawaii, and premium styles. Choose your vibe and watch the magic happen."
      size="lg"
    />

    <!-- Theme Picker Section -->
    <section class="mb-16">
      <SectionHeader
        title="Choose Your Theme"
        subtitle="Select from seasonal themes, kawaii styles, or premium aesthetics. Your choice is saved automatically."
        size="md"
      />
      <ThemePicker variant="full" showLabels={true} />
    </section>

    <!-- Info Blurbs -->
    <section class="mb-16 grid sm:grid-cols-2 gap-4">
      <InfoBlurb variant="educational" title="What's New in v2?">
        Lucky v2 introduces a complete design token system with CSS custom properties, enabling unlimited themes with runtime switching. No more compile-time limitations!
      </InfoBlurb>
      
      <InfoBlurb variant="tip" title="Performance First">
        All animations respect <code>prefers-reduced-motion</code>, and themes use efficient CSS-only transitions. WebP images reduce load times by 81-88%.
      </InfoBlurb>
    </section>

    <!-- UI Primitives Demo -->
    <section class="mb-16">
      <SectionHeader
        title="UI Primitives"
        subtitle="Soft shadows, blur backgrounds, and gradient accents built-in"
      />
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <SoftCard variant="default" padding="lg" radius="2xl">
          <h3 class="font-bold text-lg mb-2">Default Card</h3>
          <p class="text-sm text-gray-600">Soft shadow with blur background for modern depth.</p>
        </SoftCard>
        
        <SoftCard variant="elevated" padding="lg" radius="2xl">
          <h3 class="font-bold text-lg mb-2">Elevated Card</h3>
          <p class="text-sm text-gray-600">Higher elevation for important content.</p>
        </SoftCard>
        
        <SoftCard variant="glow" padding="lg" radius="2xl">
          <h3 class="font-bold text-lg mb-2">Glow Card</h3>
          <p class="text-sm text-gray-600">Soft glow effect for featured content.</p>
        </SoftCard>
        
        <SoftCard variant="default" padding="lg" radius="2xl" gradient="subtle">
          <h3 class="font-bold text-lg mb-2">Subtle Gradient</h3>
          <p class="text-sm text-gray-600">Adds theme-aware gradient overlay.</p>
        </SoftCard>
        
        <SoftCard variant="default" padding="lg" radius="2xl" gradient="accent">
          <h3 class="font-bold text-lg mb-2">Accent Gradient</h3>
          <p class="text-sm text-gray-600">Stronger theme accent overlay.</p>
        </SoftCard>
        
        <SoftCard variant="default" padding="lg" radius="2xl" hasAnimation={true}>
          <h3 class="font-bold text-lg mb-2">Hover Animation</h3>
          <p class="text-sm text-gray-600">Lifts and glows on hover (try it!).</p>
        </SoftCard>
      </div>
    </section>

    <!-- Tool Cards Demo -->
    <section class="mb-16">
      <SectionHeader
        title="Tool Cards"
        subtitle="Interactive cards for lucky number generators and tools"
      />
      
      <div class="grid sm:grid-cols-2 gap-4">
        <ToolCard
          title="Powerball Generator"
          description="Generate random Powerball numbers with full validation and educational odds display."
          icon="üé±"
          href="/powerball"
          category="Lottery"
          hasAnimation={true}
        />
        
        <ToolCard
          title="Lucky Profile"
          description="Discover your personalized lucky numbers based on birthdate, Rashi, and numerology."
          icon="üåü"
          href="/lucky-profile"
          category="Personalized"
          hasAnimation={true}
        />
      </div>
    </section>

    <!-- Game Cards Demo -->
    <section class="mb-16">
      <SectionHeader
        title="Casino-Lite Game Cards"
        subtitle="Featured games with difficulty badges"
      />
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <GameCard
          title="Blackjack"
          description="Classic 21 with CatnipCoin betting and strategy tips."
          icon="üÉè"
          href="/casino-lite/blackjack"
          difficulty="Medium"
          featured={true}
        />
        
        <GameCard
          title="High Card"
          description="Simple card draw game. Highest card wins!"
          icon="üé¥"
          href="/casino-lite/high-card"
          difficulty="Easy"
        />
        
        <GameCard
          title="War"
          description="Battle of the cards. Coming soon!"
          icon="‚öîÔ∏è"
          href="/casino-lite/war"
          difficulty="Easy"
        />
      </div>
    </section>

    <!-- Discovery Components -->
    <section class="mb-16">
      <SectionHeader
        title="Hybrid Discovery UX"
        subtitle="Search and filter components for tool/game discovery"
      />
      
      <div class="space-y-4">
        <SearchBar placeholder="Search tools, games, or themes..." />
        
        <FilterChips filters={demoFilters} />
        
        <InfoBlurb variant="info">
          <strong>How it works:</strong> Type to search or click filters. Both components emit custom events (<code>searchChange</code>, <code>filterChange</code>) that parent pages can listen to for dynamic filtering.
        </InfoBlurb>
      </div>
    </section>

    <!-- Animation Demo -->
    <section class="mb-16">
      <SectionHeader
        title="Theme Animations"
        subtitle="Each theme can define custom animations (CSS-only, reduced-motion aware)"
      />
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <SoftCard variant="default" padding="md">
          <div class="text-center">
            <div class="text-4xl mb-2">‚ùÑÔ∏è</div>
            <div class="text-sm font-medium">Winter Mint</div>
            <div class="text-xs text-gray-500">Snowfall animation</div>
          </div>
        </SoftCard>
        
        <SoftCard variant="default" padding="md">
          <div class="text-center">
            <div class="text-4xl mb-2">üèÆ</div>
            <div class="text-sm font-medium">Lunar Gold</div>
            <div class="text-xs text-gray-500">Floating lanterns</div>
          </div>
        </SoftCard>
        
        <SoftCard variant="default" padding="md">
          <div class="text-center">
            <div class="text-4xl mb-2">üå∏</div>
            <div class="text-sm font-medium">Spring Blossom</div>
            <div class="text-xs text-gray-500">Sakura petals</div>
          </div>
        </SoftCard>
        
        <SoftCard variant="default" padding="md">
          <div class="text-center">
            <div class="text-4xl mb-2">üçÉ</div>
            <div class="text-sm font-medium">Autumn Ember</div>
            <div class="text-xs text-gray-500">Falling leaves</div>
          </div>
        </SoftCard>
      </div>
    </section>

    <!-- Developer Info -->
    <section class="mb-16">
      <SoftCard variant="elevated" padding="xl" gradient="hero">
        <h2 class="text-2xl font-bold mb-4 text-gray-900">For Developers</h2>
        <div class="space-y-3 text-sm text-gray-700">
          <p>
            <strong>Design Tokens:</strong> <code>/src/styles/tokens.css</code> defines 160+ CSS custom properties for colors, gradients, shadows, spacing, typography, and animations.
          </p>
          <p>
            <strong>Theme Registry:</strong> <code>/src/themes/index.ts</code> contains all 11 themes with TypeScript interfaces and helper functions.
          </p>
          <p>
            <strong>UI Components:</strong> <code>/src/components/ui/</code> includes SoftCard, PageHero, ThemePicker, ToolCard, GameCard, SectionHeader, InfoBlurb.
          </p>
          <p>
            <strong>Discovery:</strong> <code>/src/components/discovery/</code> provides SearchBar and FilterChips with debounced events.
          </p>
          <p>
            <strong>SSR-Safe:</strong> All theme switching uses <code>src/utils/ssr.ts</code> helpers to prevent build crashes.
          </p>
        </div>
      </SoftCard>
    </section>

  </main>
</Layout>
