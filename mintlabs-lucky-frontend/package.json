{
  "name": "mintlabs-lucky-frontend",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint \"src/**/*.{ts,js,astro}\" --ignore-pattern 'src/pages/demo/**' --ignore-pattern 'src/pages/lucky-v2-*' --ignore-pattern 'src/pages/tools/**' --ignore-pattern 'src/types/**' --ignore-pattern 'src/pages/casino-lite/**' --ignore-pattern 'src/scripts/lucky.demo-balls.ts'",
    "lint:fix": "eslint --fix \"src/**/*.{ts,js,astro}\" --ignore-pattern 'src/pages/demo/**' --ignore-pattern 'src/pages/lucky-v2-*' --ignore-pattern 'src/pages/tools/**' --ignore-pattern 'src/types/**' --ignore-pattern 'src/pages/casino-lite/**' --ignore-pattern 'src/scripts/lucky.demo-balls.ts'",
    "format": "prettier --write \"src/**/*.{ts,js,astro,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,astro,css}\"",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "pretest:e2e": "npm run build:lucky && PUBLIC_API_BASE= npm run build",
    "build:lucky": "esbuild src/scripts/lucky.ts --bundle --format=esm --platform=browser --outfile=public/scripts/lucky.js",
    "prebuild": "npm run build:lucky"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.6",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.13.5",
    "dom-to-image-more": "^2.16.0",
    "html2canvas": "^1.4.1",
    "katex": "^0.16.22",
    "qrcode": "^1.5.1",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "pixelmatch": "^5.3.0",
    "@playwright/test": "^1.48.2",
    "@types/qrcode": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "astro-eslint-parser": "^1.0.5",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.23.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^15.12.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^4.1.13"
  }
}
